<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#809C"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <RelativeLayout
        android:id="@+id/relative_layout_widget_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#809C"
        android:clickable="true">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/image_button_refresh"
            android:layout_toStartOf="@+id/image_button_refresh"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/app_name_sas"
            android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageButton
                android:id="@+id/image_button_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#0000"
                android:clickable="true"
                android:contentDescription="@string/but_refresh"
                android:src="@drawable/ic_refresh_white_48dp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6000">

        <ProgressBar
            android:id="@+id/progress_bar_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="visible" />

    </FrameLayout>

</LinearLayout>