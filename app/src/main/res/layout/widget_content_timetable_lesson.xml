<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <include
            android:id="@+id/list_item_actual"
            layout="@layout/widget_list_item_multi_line_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <include
            android:id="@+id/list_item_next"
            layout="@layout/widget_list_item_multi_line_big_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_actual"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <include
        layout="@layout/base_empty_view"
        android:visibility="gone" />

</FrameLayout>