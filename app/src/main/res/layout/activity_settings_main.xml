<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical">

    <CheckBox
        android:id="@+id/check_box_show_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/check_box_text_show_description" />

    <CheckBox
        android:id="@+id/check_box_use_only_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_box_text_use_only_wifi" />

    <!--<CheckBox
        android:id="@+id/check_box_first_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_box_text_start_first_start" />-->

    <CheckBox
        android:id="@+id/check_box_debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_box_text_enable_debug" />

    <Button
        android:id="@+id/button_show_change_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/but_show_change_log" />

    <Button
        android:id="@+id/button_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/but_change_language" />

</LinearLayout>